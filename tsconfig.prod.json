{
  "extends": "@tsconfig/node16/tsconfig.json",

  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "lib": ["dom", "es2019"],
    "types": ["node"]
  },

  "exclude": [
    "node_modules",
    "packages/**/node_modules",
    "**/*.spec.ts",
    "e2e/**/*",
    "coverage",
    "examples",
    "jest.config.js",
    "/*.js"
  ]
}
